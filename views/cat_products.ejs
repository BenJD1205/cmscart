<% include layouts/header.ejs %> 
  <div class="row products">
    <% if (products.length >0) { %>
      <% products.forEach(p => { %>
        <div class="col-xs-12 col-md-4 p">
            <a href="/products/<%= p.category %>/<%= p.slug %>  ">
                <img src="/product_images/<%= p._id %>/<%= p.image %>    " alt="" class="pimage">
            </a>
            <h3><%= p.title %> </h3> 
            <h4>$<%= parseFloat(p.price).toFixed(2) %> </h4>   
            <a href="/products/<%= p.category %>/<%= p.slug %>  " class="vd">View Details</a>    
        </div>
      <% }); %>
    <% } else { %>
      <h3>No products yet</h3>
    <% } %>
      
  </div>
<% include layouts/footer.ejs %> 