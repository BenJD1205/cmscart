<%- include('../layouts/adminheader.ejs')  %> 

<h2 class="product-title">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Add a new Product</a>
<br><br>

<% if (count >0 ) { %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Product image</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product) => { %>
            <tr>
                <td><%= product.title %> </td>
                <td>$<%= parseFloat(product.price).toFixed(2) %> </td>
                <td>
                    <% if (product.image=="") { %>
                        <img class="noimage" src="/images/noimage.png" alt="">
                    <% } else { %>
                        <img class="product-img" src="/product_images/<%= product._id %>/<%= product.image %>  " alt="">
                    <% } %>
                </td>
                <td><%= product.category %> </td>
                <td><a href="/admin/products/edit-product/<%= product._id %> ">Edit</a></td>
                <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %> ">Delete</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
 <h3 class="text-center">There are no product</h3>
<% } %>



<%- include('../layouts/adminfooter') %> 